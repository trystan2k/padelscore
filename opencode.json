{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["AGENTS.md"],
  "model": "openai/gpt-5.3-codex",
  "small_model": "github-copilot/gpt-5-mini",
  "mcp": {
    "mcp_basic-memory": {
      "type": "local",
      "command": ["uvx", "basic-memory", "mcp", "--project", "padelscore"],
      "enabled": false
    },
    "mcp_serena": {
      "enabled": true,
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--enable-web-dashboard",
        "false",
        "--project",
        "padelscore"
      ]
    }
  }
}
